<span class="o">*</span><span class="p">.</span><span class="nf">sql</span>
<span class="o">*</span><span class="p">.</span><span class="nf">sqlite</span>
<span class="sr">/log
/</span><span class="n">tmp</span>
<span class="sr">/db/</span><span class="o">*</span><span class="p">.</span><span class="nf">sqlite3</span>
