<span class="c1"># Environment normalization #</span>
<span class="c1">#############################</span>
<span class="sr">/.bundle
/</span><span class="n">vendor</span><span class="o">/</span><span class="n">bundle</span>
<span class="p">.</span><span class="nf">powenv</span>

<span class="c1"># if using bower-rails ignore default bower_components path bower.json files</span>
<span class="sr">/vendor/</span><span class="n">assets</span><span class="o">/</span><span class="n">bower_components</span>
<span class="o">*</span><span class="p">.</span><span class="nf">bowerrc</span>
<span class="n">bower</span><span class="p">.</span><span class="nf">json</span>

<span class="c1"># Ruby #</span>
<span class="c1">########</span>
<span class="o">*</span><span class="p">.</span><span class="nf">gem</span>
<span class="sr">/.config
/</span><span class="no">InstalledFiles</span>
